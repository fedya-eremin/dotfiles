##### WINDOWRULES #####
for_window [app_id="(?i)thunar"] floating enable
for_window [app_id="(?i)thunar"] resize set 1000 700
for_window [app_id="firefox"] move workspace 2
# for_window [app_id="org.telegram.desktop"] move workspace 3
for_window [app_id="connman-gtk"] floating enable
for_window [app_id="connman-gtk"] resize set 400 550
for_window [app_id="connman-gtk"] move position 1220 500

input * {
    xkb_layout us,ru
    xkb_options grp:alt_shift_toggle,grp:win_space_toggle
    tap_button_map lrm
    tap enabled
    drag_lock enabled
	natural_scroll enabled
	middle_emulation enabled
	accel_profile adaptive	
}

